{
  "name": "@gymlabs/core.api",
  "version": "0.0.1",
  "description": "Core module for GymLabs architecture",
  "author": "GymLabs",
  "license": "ISC",
  "homepage": "https://github.com/gymlabs/core.api#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gymlabs/core.api.git"
  },
  "bugs": {
    "url": "https://github.com/gymlabs/core.api/issues"
  },
  "publishConfig": {
    "@gymlabs:registry": "https://npm.pkg.github.com/"
  },
  "main": "main.js",
  "scripts": {
    "dev": "dotenv -e .env -- concurrently \"npm run watch-compile\" \"npm run watch-dev\"",
    "watch-compile": "swc src -w -d build",
    "watch-dev": "nodemon --watch \"build/**/*\" -e js ./build/main.js | pino-pretty",
    "build": "swc src -d build",
    "start": "NODE_ENV=production node ./build/main.js",
    "lint": "eslint --ext .ts src",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write --ignore-unknown \"src/**/*\"",
    "prisma:generate": "prisma generate",
    "prisma:seed": "prisma db seed",
    "prepare": "husky install",
    "codegen:pre": "NODE_ENV=client ts-node -r tsconfig-paths/register -r ts-node/register ./node_modules/.bin/graphql-codegen --config ./codegen/pregen.ts",
    "codegen:operations": "gqlg --schemaFilePath ./codegen/gql/schema.graphql --destDirPath ./codegen/gql/operations --depthLimit 5",
    "codegen:post": "graphql-codegen --config ./codegen/degen.ts",
    "codegen:build": "tsup --config ./codegen/tsup.config.ts",
    "codegen": "npm run codegen:pre && npm run codegen:operations && npm run codegen:post && npm run codegen:build"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run lint:fix",
      "npm run format"
    ]
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^3.3.0",
    "@graphql-codegen/schema-ast": "^3.0.1",
    "@graphql-codegen/typescript": "^3.0.3",
    "@graphql-codegen/typescript-graphql-request": "^4.5.9",
    "@graphql-codegen/typescript-operations": "^3.0.3",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.46",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie": "^0.5.1",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "chokidar": "^3.5.3",
    "concurrently": "^8.0.1",
    "dotenv-cli": "^7.1.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "gql-generator": "^1.0.19",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.1",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "prisma": "^4.12.0",
    "prisma-dbml-generator": "^0.10.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^6.7.0",
    "typescript": "^5.0.3"
  },
  "dependencies": {
    "@pothos/core": "^3.29.0",
    "@pothos/plugin-errors": "^3.11.0",
    "@pothos/plugin-prisma": "^3.47.1",
    "@pothos/plugin-relay": "^3.39.0",
    "@pothos/plugin-scope-auth": "^3.19.0",
    "@pothos/plugin-simple-objects": "^3.6.7",
    "@pothos/plugin-validation": "^3.9.0",
    "@pothos/plugin-with-input": "^3.10.0",
    "@prisma/client": "^4.12.0",
    "bcrypt": "^5.1.0",
    "cookie": "^0.5.0",
    "graphql": "^16.6.0",
    "graphql-scalars": "^1.21.3",
    "graphql-yoga": "^3.8.0",
    "pino": "^8.11.0",
    "type-fest": "^3.7.2",
    "zod": "^3.21.4"
  }
}
