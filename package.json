{
  "name": "core.api",
  "version": "0.0.1",
  "description": "Core module for GymLabs architecture",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"npm run watch-compile\" \"npm run watch-dev\"",
    "watch-compile": "swc src -w -d dist",
    "watch-dev": "nodemon --watch \"dist/**/*\" -e js ./dist/main.js",
    "build": "swc src -d dist",
    "start": "NODE_ENV=production node ./dist/main.js",
    "lint": "eslint --ext .ts src",
    "lint:fix": "eslint --ext .ts src --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gymlabs/core.api.git"
  },
  "author": "GymLabs",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gymlabs/core.api/issues"
  },
  "homepage": "https://github.com/gymlabs/core.api#readme",
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.46",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "chokidar": "^3.5.3",
    "concurrently": "^8.0.1",
    "eslint": "^8.37.0",
    "nodemon": "^2.0.22",
    "typescript": "^5.0.3"
  }
}
